// sum of Digits


public class sumDigit {

	public static void main(String[] args) {
       int ans = sum(1342);
       System.out.println(ans);

	}
	
	public static int sum(int n) {
		if(n == 0) {
			return 0;
		}
		
		return (n % 10) + sum(n / 10);
	}

}



==============================================================================================================================================================================================

//sum of n numbers


public class sumOfN {
  public static void main(String args[]) {
	  int sum = sum(5);
	  System.out.println(sum);
  }
  
  public static int sum(int n) {
	  if(n == 1) {
		  return 1;
	  }
	  
	  return n + sum(n - 1);
  }
}


